<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>SSE TOOLBOX</display-name>
    <description>SSE TOOLBOX</description>
 <listener>
        <listener-class>it.intecs.pisa.toolbox.Toolbox</listener-class>
    </listener>
    <servlet>
        <servlet-name>Toolbox</servlet-name>
        <servlet-class>it.intecs.pisa.toolbox.Toolbox</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Push</servlet-name>
        <servlet-class>it.intecs.pisa.toolbox.PushServer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Toolbox</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Toolbox</servlet-name>
        <url-pattern>/debug/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Toolbox</servlet-name>
        <url-pattern>/deploy/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Push</servlet-name>
        <url-pattern>/Push/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Toolbox</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>   
    
   
    
    <welcome-file-list>
        <welcome-file>loginRequest.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>Exception</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
        <taglib-location>/WEB-INF/fmt.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
        <taglib-location>/WEB-INF/sql.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/xml</taglib-uri>
        <taglib-location>/WEB-INF/x.tld</taglib-location>
    </taglib>
    </web-app>
