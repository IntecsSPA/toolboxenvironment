<?xml version="1.0" encoding="UTF-8"?>

<inputInterface xmlns="http://gisClient.pisa.intecs.it/gisClient">
   <section name="WPS Update Processing Describe">
        <group label="Current WPS Process Description: ">
            <input type="file" name="describeProcessFile" hideLabel="false" id="describeProcessFile"
               optional="true"
               size="300"
               autoUploadURL="rest/gui/pushAndRetrieveData"
               iconImage="upload-icon"
               blankText="Load WPS Process Description File"
               label="Select WPS Descirbe Process File"
               iconWait="images/loaderFile.gif"
               iconFailure="images/fail.png"
               onSuccessMethod="loadDescribeWizard"
               iconSuccess="images/success.png"
               editAreaID="processDescriptionContent"/> <!-- adaptButtonLabel="Adapt to screen" -->
           <input type="editarea" name="processDescriptionContent" id="processDescriptionContent"  hidden="true" hideLabel="true"
                 syntax="xml"
                height="describeProcessingEditAreaWindow.getSize().height/1.40"/>
        </group>
   </section>
   <requestInformations>
        <buttons>
            <button name="parseDescribeButton" id="parseDescribeButton" label="Create from Edit Area" iconImage="" onclick="parseWPSDescribeProcessingRequest"/>
        </buttons>
    </requestInformations>
</inputInterface>
