<?xml version="1.0" encoding="UTF-8"?>

<inputInterface xmlns="http://gisClient.pisa.intecs.it/gisClient">
   <section name="Ordering Identification">
        <group label="Oredering Identification Info: ">
            <input type="text" name="OrderingServiceName" label="Service Name" id="OrderingServiceName" optional="false" value="" size="52"/>
            <input type="textarea" name="OrderingServiceAbstract" label="Service Abstract" id="OrderingServiceAbstract" optional="true" value="" cols="50" rows="5"/>
            <input type="text" name="OrderingServiceDescription" label="Service Description" id="OrderingServiceDescription" optional="true" value="" size="52"/>
        </group>
    </section>
    <section name="Ordering Information">
        <group label="Interface Type">
            <input type="text" name="interfaceType" id="interfaceType" hidden="true" hideLabel="true" value="" optional="false"/>
            <input type="text" name="interfaceName" id="interfaceName" hidden="true" hideLabel="true" value="" optional="false"/>
            <input type="text" name="interfaceVersion" id="interfaceVersion" hidden="true" hideLabel="true" value="" optional="false"/>
            <input type="text" name="interfaceMode" id="interfaceMode" hidden="true" hideLabel="true" value="" optional="false"/>
            <input type="combo" name="OrderingServiceInterface" id="OrderingServiceInterface" store="VALUES"
               storeFields="['interfaceTitle', 'interfaceType', 'interfaceName', 'interfaceVersion','interfaceModeUrlRequest']"
               storeData="[
                        ['SSE version 1.6', 'Ordering','SSE', '1.6', 'rest/manager/getInterfaceModes/Ordering/SSE/1.6.json'],
                        ['Eoli_Order version 3.4', 'Ordering','Eoli_Order', '3.4', 'rest/manager/getInterfaceModes/Ordering/Eoli_Order/3.4.json'],
                        ['SSE version 1.4', 'SSE',  'Ordering','1.4', 'rest/manager/getInterfaceModes/Ordering/SSE/1.4.json'],
                        ['OGC-06-141 version 0.9.4', 'Ordering','OGC-06-141', '0.9.4', 'rest/manager/getInterfaceModes/Ordering/OGC-06-141/0.9.4.json']
                    ]"
               optional="false" onChange="serviceInterfaceTypeChange"
               />
        </group>
        <group label="Ordering Interface Mode">
            <input type="combo" name="OrderingInterfaceMode" id="OrderingInterfaceMode" store="VALUES"
               storeFields="['interfaceMode']"
               storeData="[]"
               optional="false" onChange="serviceInterfaceModeChange"
               />
        </group>

    </section>
    <section name="Oredering Settings">
        <group label="General Setting">
            <input type="checkbox" name="OrderingServiceQueueIncoming" id="OrderingServiceQueueIncoming" optional="true" label="Queue incoming service requests"/>
        </group>
        <group label="Suspend Mode">
            <input type="radiogroup" name="OrderingSuspendMode" id="OrderingSuspendMode" optional="true" labelList="SOFT,HARD" valueList="SOFT,HARD"
                valueCheked="SOFT"/>
        </group>
   </section>
   <section name="Ordering Security">
       <group label="Secure Communication">
            <!--input type="checkbox" name="secureCommunicationEnable" id="secureCommunicationEnable" label="Enable Secure Communication"/-->
            <input type="text" name="OrderingSSLCertificateLocation" label="SSL certificate location" id="OrderingSSLCertificateLocation" optional="true" value="" size="52"/>
        </group>
        <!--group label="WS-Security (HMA)">
            <input type="checkbox" name="wsSecurityHMAEnable" id="wsSecurityHMAEnable" label="Enable WS-Security (HMA)"/>
        </group-->
   </section>
   
   <requestInformations>
        <buttons>
            <button name="createOrderingServiceButton" id="createOrderingServiceButton" label="Create Oredering Service" iconImage="" onclick="createServiceRequest"/>
        </buttons>
    </requestInformations>
</inputInterface>
