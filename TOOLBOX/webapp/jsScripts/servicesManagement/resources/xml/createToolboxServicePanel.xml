<?xml version="1.0" encoding="UTF-8"?>

<inputInterface xmlns="http://gisClient.pisa.intecs.it/gisClient">
   <section name="Service Identification">
        <group label="Service Identification Info: ">
            <input type="text" name="toolboxServiceName" label="Service Name" id="toolboxServiceName" optional="false" value="" size="52"/>
            <input type="textarea" name="toolboxServiceAbstract" label="Service Abstract" id="toolboxServiceAbstract" optional="true" value="" cols="50" rows="5"/>
            <input type="text" name="toolboxServiceDescription" label="Service Description" id="toolboxServiceDescription" optional="true" value="" size="52"/>
        </group>
    </section>
    <section name="Service Schema">
        <group label="Schema package">
            <input type="file" name="schemaPackage" hideLabel="false" id="schemaPackage"
               optional="true"
               size="300"
               iconImage="upload-icon"
               blankText="Selecet Schema Package File" />
        </group>
    </section>
    <section name="Service Settings">
        <group label="General Setting">
            <input type="checkbox" name="serviceQueueIncoming" id="serviceQueueIncoming" label="Queue incoming service requests"/>
        </group>
        <group label="Suspend Mode">
            <input type="radiogroup" name="suspendMode" id="suspendMode" labelList="SOFT,HARD" valueList="SOFT,HARD"
                valueCheked="SOFT"/>
        </group>
   </section>
   <section name="Service Security">
       <group label="Secure Communication">
            <input type="checkbox" name="secureCommunicationEnable" id="secureCommunicationEnable" label="Enable Secure Communication"/>
        </group>
        <group label="WS-Security (HMA)">
            <input type="checkbox" name="wsSecurityHMAEnable" id="wsSecurityHMAEnable" label="Enable WS-Security (HMA)"/>
        </group>
   </section>
