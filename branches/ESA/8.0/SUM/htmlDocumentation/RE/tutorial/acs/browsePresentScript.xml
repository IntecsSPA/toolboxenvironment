	<setVariable name="index">
		<literal value="0"/>
	</setVariable>
	<if>
		<gte>
			<dbGetNumOfRows>
				<variable name="sqlResult"/>
			</dbGetNumOfRows>
			<literal value="1"/>
		</gte>
		<sequence>
			<setVariable name="gmlFileName">
				<stringCat>
					<randomString length="8"/>
					<string>.gml</string>
				</stringCat>
			</setVariable>
			<setVariable name="response">
				<xmlDocument>
					<element>
						<tag>
							<string>mass:processPresentOutputMsg</string>
						</tag>
