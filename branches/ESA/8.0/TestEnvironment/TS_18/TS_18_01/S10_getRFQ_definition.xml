<?xml version="1.0" encoding="UTF-8"?>
<sequence xmlns="http://pisa.intecs.it/mass/toolbox/xmlScript">
	<setVariable name="filename">
		<stringCat>
			<string>/home/toolbox/TestEnvironment/OutputDir/RFQ_res_</string>
			<orderId/>
			<string>.xml</string>
		</stringCat>
	</setVariable>
	<log>
		<stringCat>
			<string>Check File Name: </string>
			<variable name="filename"/>
		</stringCat>
	</log>
	<setVariable name="XMLResponse">
		<loadXML>
			<variable name="filename"/>
		</loadXML>
	</setVariable>
	<setVariable name="orderId">
		<orderId/>
	</setVariable>
	<log>
		<stringCat>
			<string>OrderId: </string>
			<variable name="orderId"/>
		</stringCat>
	</log>
	<setXMLValue>
		<variable name="XMLResponse"/>
		<string>/mass:returnRFQResultInputMsg/mass:commonInput/mass:orderId/text()</string>
		<variable name="orderId"/>
	</setXMLValue>
	<!-- The ProductSize value is in MB but the result has to be reported in KB -->
	<setVariable name="productSize">
		<itoa>
			<multiply>
				<literal value="1024"/>
				<atoi>
					<xPath>
						<variable name="XMLResponse"/>
						<string>/mass:returnRFQResultInputMsg/mass:getRFQOutput/mass:rfqOutput/mass:productSize/text()</string>
					</xPath>
				</atoi>
			</multiply>
		</itoa>
	</setVariable>
	<!-- The User Quota value is in Byte but the result has to be reported in KB -->
	<setVariable name="userQuota">
		<itoa>
			<divide>
				<atoi>
					<xPath>
						<variable name="XMLResponse"/>
						<string>/mass:returnRFQResultInputMsg/mass:getRFQOutput/mass:rfqOutput/mass:userQuota/text()</string>
					</xPath>
				</atoi>
				<literal value="1024"/>
			</divide>
		</itoa>
	</setVariable>
	<setXMLValue>
		<variable name="XMLResponse"/>
		<string>/mass:returnRFQResultInputMsg/mass:getRFQOutput/mass:rfqOutput/mass:userQuota/text()</string>
		<variable name="userQuota"/>
	</setXMLValue>
	<setXMLValue>
		<variable name="XMLResponse"/>
		<string>/mass:returnRFQResultInputMsg/mass:getRFQOutput/mass:rfqOutput/mass:productSize/text()</string>
		<variable name="productSize"/>
	</setXMLValue>
	<dumpXML>
		<stringCat>
			<string>/home/toolbox/TestEnvironment/OutputDir/RFQ_Response_Generated_</string>
			<variable name="orderId"/>
			<string>.xml</string>
		</stringCat>
		<variable name="XMLResponse"/>
	</dumpXML>
	<variable name="XMLResponse"/>
</sequence>
