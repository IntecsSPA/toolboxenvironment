<?xml version="1.0" encoding="UTF-8"?>
<chainConfig>
    <catalog id="configuredCommands">
        <chain id="authenticationCommands" type="sequence" description="Authentication Steps">
            <command id="persistToken" className="it.intecs.pisa.toolbox.security.chain.commands.PersistSAMLToken" description="Send the token for persistence to configured SAML Bean"/>
            <command id="checkTokenTime" className="it.intecs.pisa.toolbox.security.chain.commands.CheckSAMLTokenValidityTime" description="Check the token validity time"/>
            <command id="checkTokenIssuer" className="it.intecs.pisa.toolbox.security.chain.commands.CheckSAMLTokenIssuer" description="Check the token issuer">
                <property id="issuer" value="http://earth.esa.int" description="The issuer of the token"/>
            </command>
        </chain>
        <chain id="authorizationCommands" type="choice" description="Authorization Steps">
            <command id="geoAuthorization" className="it.intecs.pisa.toolbox.security.chain.commands.GeoAuthorization" description="Standard Geo(XACML) authorization"/>
            <command id="dailAuthorization" className="it.intecs.pisa.toolbox.security.chain.commands.DAILAuthorization" description="Custom step for the DAIL PEP">
                <property id="policyDir" value="" description="Absolute path to XACML policy dir"/>
            </command>
            <command id="gmesAuthorization" className="it.intecs.pisa.toolbox.security.chain.commands.GMESAuthorization" description="Custom step for the CDS PEP">
                <property id="policyDir" value="" description="Absolute path to XACML policy dir"/>
            </command>
        </chain>
    </catalog>
</chainConfig>
