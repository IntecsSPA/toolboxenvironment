<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="GeometryBagFunctionFactory.xml"/>
    <import resource="GeometrySetFunctionFactory.xml"/>
    <import resource="GeometryConversionFunctionFactory.xml"/>
    <import resource="GeometryTopologicalFunctionFactory.xml"/>
    <import resource="GeometryGeometricFunctionFactory.xml"/>
    <import resource="GeometryAttributeProxyFactory.xml"/>

    <!-- configuration of GeoBuilder -->
    <bean id="GeoBuilder" class="net.eig.geoxacml.pdp.builder.GeoBuilder">

        <property name="attributeProxyFactory">
            <ref bean="GeometryAttributeProxyFactory" />
        </property>

        <property name="bagFunctionFactory">
            <ref bean="GeometryBagFunctionFactory" />
        </property>

        <property name="setFunctionFactory">
            <ref bean="GeometrySetFunctionFactory" />
        </property>

        <property name="conversionFunctionFactory">
            <ref bean="GeometryConversionFunctionFactory" />
        </property>

        <property name="topologicalFunctionFactory">
            <ref bean="GeometryTopologicalFunctionFactory" />
        </property>

        <property name="geometricFunctionFactory">
            <ref bean="GeometryGeometricFunctionFactory" />
        </property>

