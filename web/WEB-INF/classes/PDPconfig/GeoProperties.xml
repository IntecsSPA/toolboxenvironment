<?xml version="1.0" encoding="UTF-8"?>

<!-- ===========================================================================
This file is needed to read in values from GeoProperties to pass them to
other bean definition by import this file into the target bean definition file.

author: Benjamin Friedrich
date:   05.06.2009.
============================================================================ -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

     <!-- resolve instance of GeoProperties -->
    <bean id="GeoProperties" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass">
            <value>net.eig.geoxacml.pdp.util.GeoProperties</value>
        </property>
        <property name="targetMethod">
            <value>getInstance</value>
        </property>
    </bean>

    <!-- reads in the property with key "geometry" and represents it by this bean -->
    <bean id="GeometryURI" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="GeoProperties" />
        </property>
        <property name="targetMethod">
            <value>getProperty</value>
        </property>
        <property name="arguments">
            <list>
                <value>geometry</value>
            </list>
        </property>
    </bean>

    <!-- reads in the property with key "geometry_is_in" and represents it by this bean -->
    <bean id="GeometryIsInURI" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="GeoProperties" />
        </property>
        <property name="targetMethod">
            <value>getProperty</value>
        </property>
        <property name="arguments">
            <list>
                <value>geometry_is_in</value>
            </list>
        </property>
    </bean>

    <!-- reads in the property with key "geometry_one_and_only" and represents it by this bean -->
