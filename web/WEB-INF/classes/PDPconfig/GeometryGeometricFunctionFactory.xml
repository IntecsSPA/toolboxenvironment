<?xml version="1.0" encoding="UTF-8"?>
<!-- ===========================================================================
This file contains the configuration of the factory GeometryGeometricFunctionFactory.
You can add further functions by adding a bean within the list element which
specifies a Function instance.

author: Benjamin Friedrich
date:   05.06.2009.
============================================================================ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="GeometryGeometricFunctionFactory" class="net.eig.geoxacml.pdp.function.GeometryFunctionFactory">
        <constructor-arg>
            <bean  class="java.util.ArrayList">
                <constructor-arg>
                    <list>
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.BufferFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.ConvexHullFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.BoundaryFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.CentroidFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.DifferenceFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.SymDifferenceFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.IntersectionFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.constructive.UnionFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.scalar.AreaFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.scalar.DistanceFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.scalar.IsWithinDistanceFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.scalar.LengthFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.characteristic.IsSimpleFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.characteristic.IsValidFunction" />
                        <bean class="net.eig.geoxacml.pdp.function.geometric.characteristic.IsClosedFunction" />
                        <!-- <bean class="my.further.Function"/> -->
                    </list>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>