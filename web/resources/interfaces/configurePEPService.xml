<?xml version="1.0" encoding="UTF-8"?>

<inputInterface xmlns="http://gisClient.pisa.intecs.it/gisClient">
    <section name="Security Configuration">
        <group label="Service KeyStore">
            <input type="text" name="jksUserName" id="jksUserName" label="Alias" value="" optional="false" size="25"/>   
            <input type="text" name="jksPasswd" id="jksPasswd" label="Password" value="" optional="false" size="25"/>  
        </group> 
        
        <group label="Security Forward">
            <input type="checkbox" name="forwardMessageWithIncomingToken" id="forwardMessageWithIncomingToken" colSpan="10"
                   label="Forward message with incoming security token" disableInputList="0-forwardMessageWithCryptedToken,1-forwardMessageWithClearToken"/>          
            <input type="checkbox" name="forwardMessageWithCryptedToken" id="forwardMessageWithCryptedToken" colSpan="10"
                   label="Forward message with security token re-encrypted" enableInputList="0-keyAlias" 
                   disableInputList="0-forwardMessageWithIncomingToken,0-forwardMessageWithClearToken"/>    
            <input type="text" name="keyAlias" id="keyAlias" label="Alias of the key to be used for encryption" value="" optional="false" size="40" disabled="true"/>  
            <input type="checkbox" name="forwardMessageWithClearToken" id="forwardMessageWithClearToken" colSpan="10"
                   label="Forward message with security token decrypted" disableInputList="0-forwardMessageWithIncomingToken,1-forwardMessageWithCryptedToken"/>
        </group>
        
        <group label="KeyStore">
            <input type="file" name="jksFileLocation" hideLabel="false" id="jksFileLocation" colSpan="10"
                   optional="true"
                   size="300"
                   autoUploadURL="rest/manager/storefile"
                   iconImage="upload-icon"
                   blankText="Load Service keystore File"
                   label="KeyStore"
                   iconWait="styles/img/loaderFile.gif"
                   iconFailure="styles/img/fail.png"
                   iconSuccess="styles/img/success.png"/>      
               
        </group>     
       
    </section>   
    <section name="Authentication Checks">
        <group label="Select the Authentication Checks">
            <input type="multitext" name="multiInputAuthentication" id="multiInputAuthentication" label="Authentication Checks" size="55"/>       
        </group>
    </section>
    
    <section name="Authorization Checks">     
        <group label="Choose the XACML Authorization">
            <input type="multitext" name="multiInputAuthorization" id="multiInputAuthorization" label="Authorization Choice" size="55"/>       
        </group>
        <group label="Authorization on Response">
            <input type="checkbox" name="checkAuthorizationOnResponse" id="checkAuthorizationOnResponse" size="55"
                   label="Check authorization also on the response"/>
        </group>
    </section>
   
    <requestInformation>
        <buttons>
            <button name="configurePEPServiceButton" id="configurePEPServiceButton" label="Save Configuration" iconImage="" onclick="pepManager.configurePEPServicesSave"/>
        </buttons>
    </requestInformation>
</inputInterface>
